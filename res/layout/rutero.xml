     android:background="#C9ECFC"  >

    <TextView
        android:id="@+id/txt_ConsultarVisita"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:text="             Bienvenido a Rutero"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btn_op_solicitud"
