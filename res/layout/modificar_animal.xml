<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
     android:background="#C9ECFC" >
    
    
    
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textCodF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Codigo:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/edt_codiAni"
                 android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
                android:inputType="number" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/textTelef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/edt_nombreAnimal"
                android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha Nacimiento:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/edt_fechaNa"
                 android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
                android:inputType="date" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peso."
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/edt_pesoAnima"
                 android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raza:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/edt_raza"
                 android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha Venta:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/edt_fechaVenta"
                android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
                android:inputType="date" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha Muerte:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/edt_fechaMuer"
                 android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
                android:inputType="date" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Motivo Muerte:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/edt_motivo_Muer"
                android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Genero:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/edt_generoAnima"
                android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finca:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/edt_fincaA"
                 android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="# Abortos:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/edt_numAbortos"
                android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servicios Toro:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/edt_serviciosT"
                 android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo Animal:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/edt_tipoAnimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="# Partos:"
                android:textAppearance="?android:attr/textAppearanceLarge" /><EditText
                android:id="@+id/edt_numPartos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

            <Button
                android:id="@+id/btn_actuAnim"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:text="@string/Actualizar" />

            <Button
                android:id="@+id/btn_elimAnim"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:text="@string/Eliminar" />
</LinearLayout>
    </ScrollView>

    

</LinearLayout>
